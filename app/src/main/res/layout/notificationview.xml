<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:clickable="true">


    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enable all"
        android:id="@+id/allEnableSwitch"
        android:layout_marginTop="135dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:switchMinWidth="70dp"/>

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enable vibration"
        android:id="@+id/vibrateSwitch"
        android:layout_below="@+id/allEnableSwitch"
        android:layout_alignStart="@+id/allEnableSwitch"
        android:switchMinWidth="70dp"/>

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enable sound "
        android:id="@+id/soundSwitch"
        android:layout_below="@+id/vibrateSwitch"
        android:layout_alignStart="@+id/vibrateSwitch"
        android:switchMinWidth="70dp"/>

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enable notification"
        android:id="@+id/notificationSwitch"
        android:layout_below="@+id/soundSwitch"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:switchMinWidth="70dp"/>
</RelativeLayout>